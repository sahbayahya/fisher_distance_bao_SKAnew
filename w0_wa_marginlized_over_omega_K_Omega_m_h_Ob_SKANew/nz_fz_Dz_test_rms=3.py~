from math import *from numpy import *from scipy import *import cosmolopy.constants as ccimport cosmolopy.distance as cdimport cosmolopy.perturbation as cpimport matplotlib.pyplot as pltimport matplotlib.ticker as ticimport matplotlib.axis from scipy.integrate import quadfrom scipy import specialfrom scipy import interpolatedef plot(x, y, xlabels='', ylabels='', labels='', fignames='', colors='', locs=''):	fig2 = plt.figure()	ax2 = fig2.add_subplot(111)	ax2.plot(x , y, color= colors, linewidth=2.5, linestyle="-", label =labels)	ax2.set_ylabel(ylabels, fontsize=15)	ax2.set_xlabel(xlabels, fontsize=15)	ax2.legend(loc=locs)	plt.savefig(fignames)	plt.show()	return def plot_nz(x, y, h, k,  xlabels='', ylabels='', label1= '', label2= '', fignames='', colors1 ='', colors2= '', locs=''):	fig2 = plt.figure()	ax2 = fig2.add_subplot(111)	ax2.plot(x,y, color= colors1, linewidth=2.5, linestyle="-", label =label1)	ax2.plot(h, k, color= colors2, linewidth=2.5, linestyle="-", label =label2)	ax2.set_ylabel(ylabels, fontsize=15)	ax2.set_xlabel(xlabels, fontsize=15)	ax2.legend(loc=locs)	plt.savefig(fignames)	plt.show()	return def plot_damp(x, k, h, y, j ,xlabels='', ylabels='', label1= '', label2= '', label3= '', label4= '', fignames='', colors1 ='', colors2= '',  colors3= '', colors4= '', locs=''):	fig2 = plt.figure()	ax2 = fig2.add_subplot(111, yscale='log')	ax2.set_xscale('log')	ax2.plot(x ,k, color= colors1, linewidth=2.5, linestyle="-", label  =label1)	ax2.plot(x , h, color= colors2, linewidth=2.5, linestyle="-", label =label2)        ax2.plot(x , y, color= colors3, linewidth=2.5, linestyle="-", label =label3)        ax2.plot(x , j, color= colors4, linewidth=2.5, linestyle="-", label =label4)	ax2.set_ylabel(ylabels, fontsize=15)	ax2.set_xlabel(xlabels, fontsize=15)	ax2.legend(loc=locs)	plt.savefig(fignames)	plt.show()	return 	#===================Read the file==================================BAO_AMP=0.5817(z, nz, fz, Dz) = loadtxt